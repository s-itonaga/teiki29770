<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Customer</h2>
      <h5>お客様情報の編集</h5>
      <%= link_to "取置商品登録画面", root_path, class: 'btn'%>
      <%= link_to "取置商品一覧画面", root_path, class: 'btn'%>
      <%= link_to "お客様一覧画面へ", customers_path, class: 'btn'%>
      <%= link_to "お客様情報を削除", customer_path(@customer.id), method: :delete, class: 'btn'%>
      <%= link_to "メイン画面に戻る", root_path, class: 'btn'%>

    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @customer, url: customer_path, local: true do |f|%>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :お客様名%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, placeholder:"例）山田太郎", autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :お客様名かな%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name_kana, placeholder:"例）やまだたろう"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :電話番号%>
          </div>
          <div class='field-input'>
            <%= f.text_field :phone_number, placeholder:"例）09012345678",maxlength:"11"%>

          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :備考１『連絡時間などの注意事項を入力』%>
          </div>
          <div class='field-input'>
            <%= f.text_field :note1, placeholder:"（40文字まで)", maxlength:"40"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :備考２『その他の注意事項を入力』%>
          </div>
          <div class='field-input'>
            <%= f.text_field :note2, placeholder:"（40文字まで)", maxlength:"40"%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "編集", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>